        <div class="row">
            <div class="column3" style="background-color: #fff; text-align: center; ">
                <h2 style="writing-mode: vertical-rl; transform: rotate(180deg); text-orientation: mixed; ">Important</h2>
            </div>
            <div class="column bg-primary " style="background-color: #ed7f36; height:auto">
                <h2>Quadrant 1</h2>
                <table class="table main-table" id="quadrant1">
                    <thead>
                        <tr>
                            <th class="tg-bm32">Task</th>
                            <th class="tg-ws2f">Due Date</th>
                            <th class="tg-ws2f">Category</th>
                            <th class="tg-ws2f">Completed</th>
                            <th class="tg-ws2f"></th>
                            <th class="tg-ws2f"></th>

                        </tr>
                    </thead>
                    <tbody>


                        @foreach (var x in Model)
                        {
                            if (x.Quadrant == 1)

                            {
                                <tr>
                                    <td>@x.Task</td>
                                    <td>@x.DueDate</td>
                                    <td>@x.Category.CategoryName</td>
                                    <td>@x.Completed</td>
                                    <td><button type="submit" class="btn btn-secondary" asp-controller="Home" asp-action="Edit" asp-route-taskid="@x.TaskID">Edit</button></td>
                                    <td><button type="submit" class="btn btn-secondary" asp-controller="Home" asp-action="Delete" asp-route-taskid="@x.TaskID">Delete</button></td>
